generator client {
  provider = "prisma-client-js"
  // --- THIS IS THE FIX ---
  // We explicitly tell Prisma where to output the generated client
  // so that our monorepo can find it.
  output   = "./node_modules/.prisma/client"
  // --- END OF FIX ---
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // This loads from the .env file in apps/backend
}

// ----------------------------------------
// NEW ENUM: UserRole
// ----------------------------------------
enum UserRole {
  ADMIN
  STAFF
}

// ----------------------------------------
// NEW MODEL: User (Admin, Staff)
// ----------------------------------------
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  first_name    String
  last_name     String
  password_hash String // We will never store the password directly
  role          UserRole @default(STAFF)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

// ----------------------------------------
// NEW MODEL: Guardian
// ----------------------------------------
model Guardian {
  id         String   @id @default(uuid())
  first_name String
  last_name  String
  email      String   @unique // Guardian's email MUST be unique
  phone      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relation: One Guardian has many Students
  students Student[]
}

// ----------------------------------------
// UPDATED MODEL: Student
// ----------------------------------------
model Student {
  id          String   @id @default(uuid())
  first_name  String
  last_name   String
  // Student's own contact info (optional)
  email       String?  @unique
  phone       String?
  school_name String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relation: Many Students belong to one Guardian
  guardian   Guardian @relation(fields: [guardianId], references: [id])
  guardianId String // The foreign key

  // Relations (unchanged)
  batches     StudentBatch[]
  payments    Payment[]
  attendances Attendance[]
}

model Batch {
  id         String    @id @default(uuid())
  name       String // e.g., "Class 10 CBSE Maths - 2025"
  subject    String? // e.g., "Maths"
  teacher    String? // e.g., "Mr. Sharma"
  start_date DateTime  @default(now())
  end_date   DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  students StudentBatch[]
  payments Payment[]
}

// Join table for Students and Batches (Many-to-Many)
model StudentBatch {
  id        String  @id @default(uuid())
  student   Student @relation(fields: [studentId], references: [id])
  studentId String
  batch     Batch   @relation(fields: [batchId], references: [id])
  batchId   String

  total_fee_agreed Float    @default(0)
  join_date        DateTime @default(now())

  @@unique([studentId, batchId]) // A student can join a batch only once
}

model Payment {
  id           String   @id @default(uuid())
  amount       Float
  payment_date DateTime @default(now())
  method       String // e.g., "Cash", "UPI", "Stripe"
  notes        String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  // Optional: Link payment to a specific batch
  batch   Batch?  @relation(fields: [batchId], references: [id])
  batchId String?
}

model Attendance {
  id         String   @id @default(uuid())
  date       DateTime @db.Date
  status     String // "Present", "Absent", "Late"
  notes      String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  student   Student @relation(fields: [studentId], references: [id])
  studentId String
}
